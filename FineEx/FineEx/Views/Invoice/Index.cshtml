
@{
    ViewBag.Title = "Index";
    SelectList invoiceTypeList = ViewBag.InvoiceTypes as SelectList;
    SelectList companyList = ViewBag.Companies as SelectList;
}

<link href="~/Content/custom/table.css" rel="stylesheet" />

<br />
<h2 class="ml-2 p-2 bg-dark text-light">@FineEx.Resources.Invoice.Invoice.Title</h2>

<div class="pl-lg-0 mt-lg-4">
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="form-group">
                @Html.Label(FineEx.Resources.Invoice.Invoice.InvoiceType, htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                <div class="col-md-12">
                    @Html.DropDownList("ddlInvoiceType", invoiceTypeList, FineEx.Resources.Invoice.Invoice.InvoiceTypePlaceholder, new { @class = "picker form-control col-lg-12" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.Label(FineEx.Resources.Invoice.Invoice.Company, htmlAttributes: new { @class = "control-label col-md-10 font-weight-bold" })
                <div class="col-md-12">
                    @Html.DropDownList("ddlCompany", companyList, FineEx.Resources.Invoice.Invoice.CompanyPlaceholder, new { @class = "picker form-control col-lg-12" })
                </div>
            </div>
        </div>
        <div class="col-md-2 mt-4">
            <a id="createInvoice" href="Invoice/Create" class="btn btn-success mx-3 my-2 font-weight-bold disabled">@FineEx.Resources.Invoice.Invoice.CreateInvoice</a>
        </div>
        <div class="col-md-2 mt-4">
            <button id="showTable" href="Invoice/Partial" class="btn btn-warning my-2 font-weight-bold disabled">@FineEx.Resources.Invoice.Invoice.ShowInvoices</button>
        </div>
    </div>
</div>

<div id="container" class="main-table-container bg-light ml-2 py-2" hidden>

</div>


@section scripts {
    <script>
        $(document).ready(function () {
            mainGrid = document.getElementById("container");
            mainGrid.addEventListener("wheel", scrollHorizontally, false);
        })

        $(".picker").on("change", function () {
            var $sels = $('.picker option:selected[value=""]');
            var companyBusinessNumber = $("#ddlCompany").val();
            $("#createInvoice").attr('href', '/Invoice/Create?businessNumber=' + companyBusinessNumber)
            if ($sels.length == 0) {
                $("#showTable").removeClass("disabled");
                $("#createInvoice").removeClass("disabled");
            } else {
                $("#showTable").addClass("disabled");
                $("#createInvoice").addClass("disabled");
            }
        });

        $("#showTable").on("click", function () {
            var invoiceTypeVal = $("#ddlInvoiceType").val();
            var companyBusinessNumber = $("#ddlCompany").val();
            $.ajax({
                url: '/invoice/partial?invoiceType=' + invoiceTypeVal + '&businessNumber=' + companyBusinessNumber,
                type: 'POST',
                success: function (data) {
                    $("#container").prop("hidden", false);
                    $("#container").html(data)
                }
            })
        });

        function scrollHorizontally(e) {
            e = window.event || e;
            var delta = Math.max(-1, Math.min(1, (e.wheelDelta || -e.detail)));
            $("#container").scrollLeft($("#container").scrollLeft() - delta * 50);
            e.preventDefault();
        }

    </script>
}

