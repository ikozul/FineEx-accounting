@model FineEx.BusinessLayer.Models.ItemModels.ItemAddModel

@{
    ViewBag.Title = FineEx.Resources.Item.Item.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3 class="p-2 bg-dark text-light">@FineEx.Resources.Item.Item.Create_Item</h3>
<hr />

<div class="container" style="background: aliceblue">
    @using (Html.BeginForm("CreateItem", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.CompanyId)

        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label(FineEx.Resources.Item.Item.ItemName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label(FineEx.Resources.Item.Item.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SelectedPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SelectedPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label(FineEx.Resources.Item.Item.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SelectedQuantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SelectedQuantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@FineEx.Resources.Item.Item.Create" class="btn btn-info" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
